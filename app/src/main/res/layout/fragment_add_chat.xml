<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.fragments.AddChatFragment">

    <Button
        android:id="@+id/button_add_chat"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="306dp"
        android:layout_height="91dp"
        android:layout_marginBottom="195dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="@string/action_add_chat"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/text_add_chat"
        android:layout_width="317dp"
        android:layout_height="45dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/text_add_chat"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_add_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>