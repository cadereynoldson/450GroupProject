<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    android:elevation="0dp"
    app:cardBackgroundColor="#9000BCD4"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:text="10:00"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_hours_forecast"
                android:layout_width="39dp"
                android:layout_height="36dp"
                android:layout_below="@id/text_hours"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_weather_yellow_24" />

            <TextView
                android:id="@+id/text_hours_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hours_forecast"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="25Â°"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>