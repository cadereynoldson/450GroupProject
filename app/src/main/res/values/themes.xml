<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroupProjectG3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item> <!-- Bright primary color -->
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Color that would contrast with the primary color -->
        <item name="colorSurface">@color/white</item> <!-- Color that serves as surfaces for cards, menus, etc -->
        <item name="colorOnSurface">@color/grey_900</item> <!-- Color that goes on top of the surface! (TEXT!!) -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Secondary branding color for the app -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- A variant of the secondary color -->
        <item name="colorOnSecondary">@color/black</item> <!-- Color which would go on this secondary color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/off_white</item> <!-- Background color! -->
    </style>

    <style name="Theme.GroupProjectG3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GroupProjectG3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GroupProjectG3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>